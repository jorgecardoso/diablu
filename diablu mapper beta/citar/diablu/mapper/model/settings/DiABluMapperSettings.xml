<mapper>

    <!--
    
        Indicates if the discovery should be launched (& restarted) automatic
    
    -->
    <isAutomaticSearch>true</isAutomaticSearch>
    
    <!--
    
            Copy options. 

            ALL - means that all detected anchor points will be copied to the newly created landmark
            FILTERED - indicates the device classes to filter to the newly created landmark
            
    -->
    <copy>ALL</copy>
    
    

    <!-- 
    
         Filtered device classes
         These classes can be filtered out of the landmark's creation  
         
     -->
     
     <filtered_list>
         
         <device_class></device_class>
        
         
     </filtered_list>
         
         
    
    
</mapper>
